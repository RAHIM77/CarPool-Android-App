<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rahim.carpoolapp1.CarDetail">
    <ImageView
        android:id="@+id/imageView3"
        android:layout_gravity="center"
        android:layout_width="166dp"
        android:layout_height="101dp"
        app:srcCompat="@drawable/clogo" />
    <TextView
        android:layout_width="250dp"
        android:text="Car Detail"
        android:layout_gravity="center"
        android:paddingTop="1dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundedcorner"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Car Model No"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:hint="Car Number"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:hint="Lisence Number"
        />
    <Button
        android:layout_width="match_parent"
        android:background="#616161"
        android:id="@+id/carsave"
        android:layout_height="wrap_content"
        android:text="Save"/>
</LinearLayout>
